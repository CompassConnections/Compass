  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "lib",
    "target": "es2022",
    "skipLibCheck": true,
    "paths": {
      "common/*": ["./common/*"],
      "backend/*": ["./backend/*"],
    }
  },
  "include": ["tests/**/*.ts"]
}
